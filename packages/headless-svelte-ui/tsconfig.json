{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
      "src",
  ],
  "exclude": [
      "node_modules",
      "lib"
  ],
  "compilerOptions": {
      "target": "es2017",
      "types": [
          "svelte"
      ],
      "moduleResolution": "node"
  }
}

